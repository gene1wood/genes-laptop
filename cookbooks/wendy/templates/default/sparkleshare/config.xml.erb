<?xml version="1.0" encoding="UTF-8"?>
<sparkleshare>
  <user>
    <name><%= @fullname %></name>
    <email><%= @email %></email>
  </user>
  <notifications>True</notifications>
  <folder>
    <name><%= @folder_name %></name>
    <identifier><%= @folder_identifier %></identifier>
    <url>ssh://<%= @username %>@<%= @hostname %><%= @path %></url>
    <backend>Git</backend>
  </folder>
</sparkleshare>

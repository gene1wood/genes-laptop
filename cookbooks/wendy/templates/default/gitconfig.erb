[user]
   name = <%= @fullname %>
   email = <%= @email %>
   signingkey = <%= @signingkey %>
[diff]
   tool = meld
[core]
   excludesfile = /home/<%= @username %>/.gitignore_global
[push]
   default = simple
   recurseSubmodules = check
[color]
   ui = auto
[commit]
   gpgsign = true
[gc]
   autoDetach = false
[gpg]
   program = /usr/bin/gpg2
[gui]
   pruneduringfetch = true
[smartgit "submodule"]
   fetchalways = false
   update = true
   initializenew = true